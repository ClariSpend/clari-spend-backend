generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Spend {
  id            String   @id @default(uuid())
  amount        Float
  description   String
  categoryId    String
  category      Category @relation(fields: [categoryId], references: [id])
  paymentMethod String
  date          DateTime
  notes         String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  createdById   String
  updatedById   String
}

model Category {
  id          String   @id @default(uuid())
  name        String
  icon        String
  color       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  createdById String
  updatedById String
  Spend       Spend[]
}

model Goal {
  id           String    @id @default(uuid())
  name         String
  targetAmount Float
  savedAmount  Float
  startDate    DateTime @default(now())
  targetDate   DateTime? // Optional target date
  icon         String
  color        String
  createdById  String
  updatedById  String? // Optional updated by ID
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}
